<!-- Page Content -->
<div class="container">

    <div class="row">
        <!-- Blog Post Content Column -->
        {% for entity in entities %}
            <div class="col-lg-8 article">
                <!-- Blog Post -->
                <!-- Title -->
                <h1><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.title }}</a></h1>
                <!-- Preview Image -->
                {#<img class="img-responsive" src="http://placehold.it/900x300" alt="">#}
                <hr>
                <!-- Post Content -->
                <p class="lead">
                    {{ entity.content }}
                </p>
                <hr>
                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span>
                    {% if entity.datebillet %}
                        Last modified on
                        {{ entity.datebillet|date('F jS \\a\\t g:ia') }}
                    {% endif %}
                    <br>

                     <a href="{{ path('post_edit', { 'id': entity.id }) }}">
